<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.edu.poly.totalstreamer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".network.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBase">
        <activity
            android:name=".activities.MainActivity"
            android:label="Total Streamer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="Sign up" />
        <activity
            android:name=".activities.TwitchGamesActivity"
            android:label="Games" />
        <activity
            android:name=".activities.TwitchChannelsActivity"
            android:label="Channels" />
        <activity
            android:name=".activities.TwitchStreamActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>